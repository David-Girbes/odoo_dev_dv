<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestion_restaurante_david.list">
      <field name="name">Lista de Platos</field>
      <field name="model">gestion_restaurante_david.plato_david</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="precio"/>
          <field name="disponible"/>
          <field name="categoria"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="restaurante_form">
    <field name="name">gestion_restaurante_david.plato_david.form</field>
    <field name="model">gestion_restaurante_david.plato_david</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="precio"/>
                    <field name="tiempo_preparacion"/>
                    <field name="disponible"/>
                    <field name="categoria"/>
                </group>
            </sheet>
        </form>
    </field>
</record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestion_restaurante_david.action_window">
      <field name="name">Gestión de Platos</field>
      <field name="res_model">gestion_restaurante_david.plato_david</field>
      <field name="view_mode">list,form</field>
    </record>


    

    <!-- Top menu item -->

    <menuitem name="Restaurante" id="gestion_restaurante_david.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menú" id="gestion_restaurante_david.menu_1" parent="gestion_restaurante_david.menu_root"/>
<!--
    <menuitem name="Menu 2" id="gestion_restaurante_david.menu_2" parent="gestion_restaurante_david.menu_root"/>
-->
    <!-- actions -->
    <menuitem name="Platos" id="gestion_restaurante_david.platos_list" parent="gestion_restaurante_david.menu_1"
              action="gestion_restaurante_david.action_window"/>
<!--
    <menuitem name="Server to list" id="gestion_restaurante_david" parent="gestion_restaurante_david.menu_2"
              action="gestion_restaurante_david.action_server"/>
-->
  </data>
</odoo>
