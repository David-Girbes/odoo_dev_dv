<odoo>
  <data>
    <!-- VISTAS PARA TAREAS -->
    
    <record model="ir.ui.view" id="gestion_tareas_david.tareas_list">
      <field name="name">Lista de Tareas</field>
      <field name="model">gestion_tareas_david.tareas_david</field>
      <field name="arch" type="xml">
        <list>
          <field name="codigo"/>
          <field name="nombre"/>
          <field name="descripcion"/>

        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="gestion_tareas_david.tareas_form">
      <field name="name">Formulario de Tareas</field>
      <field name="model">gestion_tareas_david.tareas_david</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="codigo"/>
              <field name="nombre"/>
              <field name="descripcion"/>
              <field name="fecha_ini"/>
              <field name="fecha_fin"/>
              <field name="fecha_creacion"/>
              <field name="finalizado"/>
              <field name="sprint"/>
              <field name="rel_tecnologias" widget="many2many_tags"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    
    <!-- VISTAS PARA SPRINTS -->
    <record model="ir.ui.view" id="gestion_tareas_david.sprints_list">
      <field name="name">Lista de Sprints</field>
      <field name="model">gestion_tareas_david.sprints_david</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="descripcion"/>
          <field name="fecha_ini"/>
          <field name="fecha_fin"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="gestion_tareas_david.sprints_form">
      <field name="name">Formulario de Sprints</field>
      <field name="model">gestion_tareas_david.sprints_david</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="descripcion"/>
            </group>
            <group>
              <field name="fecha_ini"/>
              <field name="fecha_fin"/>
            </group>
            <notebook>
              <page string="Tareas del Sprint">
                <field name="tareas">
                  <list>
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="fecha_ini"/>
                    <field name="fecha_fin"/>
                    <field name="finalizado"/>
                  </list>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ACCIONES -->
    <record model="ir.actions.act_window" id="gestion_tareas_david.action_tareas">
      <field name="name">Tareas</field>
      <field name="res_model">gestion_tareas_david.tareas_david</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gestion_tareas_david.action_sprints">
      <field name="name">Sprints</field>
      <field name="res_model">gestion_tareas_david.sprints_david</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- MENÃšS -->
    <menuitem name="GestiÃ³n de Tareas" id="gestion_tareas_david.menu_root"/>


    <menuitem name="Tareas" id="gestion_tareas_david.menu_tareas" parent="gestion_tareas_david.menu_root"
              action="gestion_tareas_david.action_tareas"/>
              
    <menuitem name="Sprints" id="gestion_tareas_david.menu_sprints" parent="gestion_tareas_david.menu_root"
              action="gestion_tareas_david.action_sprints"/>

  </data>
</odoo>
